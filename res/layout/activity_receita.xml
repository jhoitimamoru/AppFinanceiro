<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Receita1Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        android:icon="@drawable/ic_procurar"
        layout="@layout/toolbar"
        />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/Receita2Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="22dp"
        android:paddingRight="16dp">
        <TextView
            android:id="@+id/TvValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALOR"
            android:layout_marginTop="17dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/EdtValor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLength="10"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/cardview_dark_background"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/TvData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATA"
            android:layout_marginTop="5dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cardview_dark_background" />


        <EditText
            android:id="@+id/EdtDataRec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColorHint="@color/cardview_dark_background"
            android:focusable="false" />


        <TextView
            android:id="@+id/TvDescricao"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="DESCRIÇÃO"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cardview_dark_background" />

        <EditText
            android:id="@+id/EdtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:maxLength="30"
            android:inputType="textImeMultiLine"
            android:textColorHint="@color/cardview_dark_background" />


        <TextView
            android:id="@+id/TvTipoConta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIPO DA CONTA"
            android:layout_marginTop="8dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/cardview_dark_background" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/spinnerConta" />

        <LinearLayout
            android:id="@+id/Conta3Layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/BtnVoltar"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:text="VOLTAR" />

            <Button
                android:id="@+id/BtnSalvar"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:text="SALVAR" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>